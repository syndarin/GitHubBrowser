<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:id="@+id/fragment_container_primary"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="@dimen/primary_container_percentage_expanded"/>

    <FrameLayout
        android:id="@+id/fragment_container_secondary"
        android:layout_toRightOf="@id/fragment_container_primary"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="@dimen/secondary_container_percentage_shrinked"/>

</android.support.percent.PercentRelativeLayout>